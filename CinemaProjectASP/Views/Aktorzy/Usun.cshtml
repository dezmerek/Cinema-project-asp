@model Aktor

@{
    ViewData["Title"] = "Delete actor";
}

<div class="row text">
    <div class="col-md-4 offset-4">
        <p>
            <h1>Potwierdzenie usunięcia dla @Model.ImieNazwisko</h1>
        </p>
        <div class="row">
            <div class="col-md-8 offset-2">
                    <div class="form-group">
                        <label asp-for="ImieNazwisko" class="control-label"></label>
                        <input asp-for="ImieNazwisko" class="form-control" readonly />
                        <span asp-validation-for="ImieNazwisko" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="RokUrodzenia" class="control-label"></label>
                        <input asp-for="RokUrodzenia" class="form-control" readonly />
                        <span asp-validation-for="RokUrodzenia" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Biografia" class="control-label"></label>
                        <input asp-for="Biografia" class="form-control" readonly />
                        <span asp-validation-for="Biografia" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <form asp-action="Usun">
                            <input type="hidden" asp-for="Id" />
                            <input type="submit" value="Usuń" class="btn btn-danger float-right" />
                        </form>
                        <a class="btn btn-outline-secondary" asp-action="Index">Lista aktorów</a>
                    </div>
            </div>
        </div>
    </div>
</div>
} 