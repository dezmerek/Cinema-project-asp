@model IEnumerable<Aktor>

@{
    ViewData["Title"] = "Lista aktorów";
}

<div class="row">
    <div class="col-md-8 offset-md-2">

        <table class="table">
            <thead>
                <tr class="text-center">
                    <th>@Html.DisplayNameFor(model=>model.ImieNazwisko)</th>
                    <th>@Html.DisplayNameFor(model=>model.RokUrodzenia)</th>
                    <th>@Html.DisplayNameFor(model=>model.Biografia)</th>
                    <th style="width: 260px;">Akcje</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                   <tr>
                       <td class="align-middle">
                           @Html.DisplayFor(modelItem => item.ImieNazwisko)
                       </td>
                       <td class="align-middle">
                           @Html.DisplayFor(modelItem => item.RokUrodzenia)
                       </td>
                       <td class="align-middle">
                           @Html.DisplayFor(modelItem => item.Biografia)
                       </td>
                       <td class="align-middle">
                            <a class="btn btn-primary" asp-action="Edytuj" asp-route-id="@item.Id"><i class="bi bi-pencil-square"></i>Edytuj </a>
                            <a class="btn btn-info" asp-action="Szczegoly" asp-route-id="@item.Id"><i class="bi bi-eye"></i>Szczególy </a>
                            <a class="btn btn-danger text-white" asp-action="Usun" asp-route-id="@item.Id"><i class="bi bi-trash"></i>Usuń </a>
                       </td>
                   </tr>
                }
            </tbody>
        </table>

    </div>
</div>

<div style="position: fixed; right: 25px; bottom: 100px;" class="text-white">
    <a asp-controller="Aktorzy" asp-action="Dodaj" class="btn btn-success"> 
    <i class="bi bi-plus-circle"></i>Dodaj</a>
</div>