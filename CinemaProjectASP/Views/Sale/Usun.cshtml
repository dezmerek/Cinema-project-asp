@model Sala

@{
    ViewData["Title"] = "Usuniecie sale";
}

<div class="row text">
    <div class="col-md-4 offset-4">
        <p>
            <h1>Potwierdzenie usunięcia dla @Model.Nazwa</h1>
        </p>
        <div class="row">
            <div class="col-md-8 offset-2">
                    <div class="form-group">
                        <label asp-for="Nazwa" class="control-label"></label>
                        <input asp-for="Nazwa" class="form-control" readonly />
                        <span asp-validation-for="Nazwa" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Opis" class="control-label"></label>
                        <input asp-for="Opis" class="form-control" readonly />
                        <span asp-validation-for="Opis" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <form asp-action="Usun">
                            <input type="hidden" asp-for="Id" />
                            <input type="submit" value="Usuń" class="btn btn-danger float-right" />
                        </form>
                        <a class="btn btn-outline-secondary" asp-action="Index">Lista sal</a>
                    </div>
            </div>
        </div>
    </div>
</div>
} 