@model Sala

@{
    ViewData["Title"] = "Szczegoly sali";
}

<div class="row text">
    <div class="col-md-4 offset-4">
        <p>
            <h1>Szczegóły dla @Model.Nazwa</h1>
        </p>
        <div class="row">
            <div class="col-md-8 offset-2">
                <form asp-action="Dodaj">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                
                    <div class="form-group">
                        <label asp-for="Nazwa" class="control-label"></label>
                          <input asp-for="Nazwa" class="form-control" readonly>
                          <span asp-validation-for="Nazwa" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Opis" class="control-label"></label>
                          <input asp-for="Opis" class="form-control" readonly>
                          <span asp-validation-for="Opis" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <a class="btn btn-outline-success float-right" asp-action="Edytuj" asp-route-id="@Model.Id">Edytuj</a>
                        <a class="btn btn-outline-secondary" asp-action="Index">Lista sal</a>
                    </div>
                 </form>
            </div>
        </div> 
    </div>
</div>