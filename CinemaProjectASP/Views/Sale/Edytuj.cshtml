@model Sala

@{
    ViewData["Title"] = "Edytuj sale";
}

<div class="row text">
    <div class="col-md-4 offset-4">
        <p>
            <h1>Edytuj sale</h1>
        </p>
        <div class="row">
            <div class="col-md-8 offset-2">
                <form asp-action="Edytuj">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                
                    <div class="form-group">
                        <label asp-for="Nazwa" class="control-label"></label>
                          <input asp-for="Nazwa" class="form-control">
                          <span asp-validation-for="Nazwa" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Opis" class="control-label"></label>
                          <textarea asp-for="Opis" class="form-control"></textarea>
                          <span asp-validation-for="Opis" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Zapisz" class="btn btn-outline-success float-right" />
                        <a class="btn btn-outline-secondary" asp-action="Index">Lista sal</a>
                    </div>
                 </form>
            </div>
        </div>
    </div>
</div>