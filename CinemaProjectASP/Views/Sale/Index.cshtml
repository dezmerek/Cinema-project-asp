@model IEnumerable<Sala>

@{
    ViewData["Title"] = "Lista sal";
}

<div class="row">
    <div class="col-md-8 offset-md-2">

        <table class="table">
            <thead>
                <tr class="text-center">
                    <th>@Html.DisplayNameFor(model=>model.Nazwa)</th>
                    <th>@Html.DisplayNameFor(model=>model.Opis)</th>
                    <th>Akcje</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                   <tr>
                       <td class="align-middle">
                           @Html.DisplayFor(modelItem => item.Nazwa)
                       </td>
                       <td class="align-middle">
                           @Html.DisplayFor(modelItem => item.Opis)
                       </td>
                       <td class="align-middle">
                           <a class="btn btn-primary text-white"><i class="bi bi-pencil-square"></i>Edytuj</a>
                           <a class="btn btn-info text-white"><i class="bi bi-eye"></i>Szczegóły</a>
                           <a class="btn btn-danger text-white"><i class="bi bi-trash"></i>Usuń</a>
                       </td>
                   </tr>
                }
            </tbody>
        </table>

    </div>
</div>

